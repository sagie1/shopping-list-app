<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shoppinglist">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/chklst"
        android:label="@string/app_name"
        android:roundIcon="@drawable/chklst"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShoppingList">
        <!-- each activity is limited to portrait orientation only. !-->
        <activity android:name=".HomeActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".RegitrationActivity" android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>